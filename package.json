{
  "name": "bknd",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "concurrently \"bun run watch:css\" \"wrangler dev\"",
    "typegen": "wrangler types && bun run bknd:typegen",
    "predev": "concurrently \"bun run bknd:copy-assets\" \"bun run typegen\"",
    "bknd:typegen": "PROXY=1 bunx bknd types",
    "bknd:copy-assets": "bunx bknd copy-assets --out dist --clean",
    "build:css": "tailwindcss -i ./src/styles/global.css -o ./dist/styles/global.css",
    "watch:css": "tailwindcss -i ./src/styles/global.css -o ./dist/styles/global.css --watch"
  },
  "dependencies": {
    "bknd": "0.19.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "concurrently": "^9.2.1",
    "daisyui": "^5.3.10",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.2",
    "wrangler": "^4.34.0"
  }
}
